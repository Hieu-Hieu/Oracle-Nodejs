<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    Apex Admin
  </title>
  <link rel="shortcut icon" href="./images/logo-mb.png" type="image/png">
  <!-- GOOGLE FONT -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet">
  <!-- BOXICONS -->
  <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
  <!-- APP CSS -->
  <link rel='stylesheet' href='/stylesheets/grid.css'>
  <link rel="stylesheet" href="/stylesheets/app.css">
  <link rel="stylesheet" href="/stylesheets/user.css">
  <link rel="stylesheet" href="/stylesheets/userProfile.css">

</head>

<body>

  <!-- SIDEBAR -->
  <% include ./sidebar.ejs %>
    <!-- END SIDEBAR -->

    <!-- MAIN CONTENT -->
    <div class="main">
      <div class="main-header">
        <div class="mobile-toggle" id="mobile-toggle">
          <i class='bx bx-menu-alt-right'></i>
        </div>
        <div class="main-title">
          dashboard
        </div>
      </div>
      <div class="main-content">
        <div class="row">
          <div class="col-12">
            <!-- ORDERS TABLE -->
            <div class="box">
              <div class="box-header">
                Add new user
              </div>
              <div class="box-body overflow-scroll">
                <div class="row">
                  <div class="form-style-2" id="form-modal">

                    <form action="/addUser" method="post">
                      <label for="field1"><span>Username <span class="required">*</span></span>
                        <input type="text" class="input-field" name="USERNAME" value="" required />
                      </label>
                      <label for="field1"><span>Password <span class="required">*</span></span>
                        <input type="password" class="input-field" name="PASSWORD" value="" required />
                      </label>
                      <label for="field1"><span>Tablespace <span class="required">*</span></span>
                        <select name="field4" id="DEFAULT_TABLESPACE" class="select-field">
                          <%listTableSpace.map(x=>{%>
                            <option value="<%-x%>">
                              <%-x%>
                            </option>
                            <% })%>

                        </select>
                      </label>
                      <label for="QUOTA_ON"><span>Quota <span class="required">*</span></span>
                        <input type="text" class="input-field" name="QUOTA" value="" required
                          style="width:60px !important" />

                        on
                        <select name="QUOTA_ON" id="QUOTA_ON" class="select-field" style="width:60px !important">
                          <%listTableSpace.map(x=>{%>
                            <option value="<%-x%>">
                              <%-x%>
                            </option>
                            <% })%>

                        </select>
                      </label>
                      <label for="field1"><span>Profile <span class="required">*</span></span>
                        <select name="PROFILE" id="PROFILE" class="select-field">
                          <%listProfileName.map(x=>{%>
                            <option value="<%-x%>">
                              <%-x%>
                            </option>
                            <% })%>

                        </select>
                      </label>
                      <label><span> </span><input type="submit" value="Submit" /></label>

                    </form>
                  </div>
                </div>
              </div>
            </div>
            <!-- END ORDERS TABLE -->
          </div>
        </div>
      </div>
    </div>
    <!-- END MAIN CONTENT -->

    <div class="overlay"></div>

    <!-- APP JS -->
    <script src="/javascripts/app.js"></script>
</body>

</html>